<script>
    function InvalidID(textbox) {
        if (textbox.value.length > textbox.maxLength)
        {
            textbox.value = textbox.value.slice(0, textbox.maxLength);
        }
        if (textbox.value === '') {
            textbox.setCustomValidity('Enter an EmployeeID');
