<script>

    $('#ClearForms').click(function (e) {

        swal({
            title: 'Are you sure?',
            text: "You want to Clear all input fields !",
            type: 'warning',
            buttons: {
                confirm: {
                    text: 'Yes, Clear it !',
                    className: 'btn btn-success'
                },
                cancel: {
                    visible: true,
                      text: 'No, Cancel it !',
                    className: 'btn btn-danger'
                }
            }
        }).then(function (value) {
            if (value == true) {
                $('#vendorname').val('');
                $('#type_of_entity_vendor').val('');
                $('#vendorcin').val('');
                $('#vendorauthorisedsignatoryname').val('');
                $('#vendorregisteredaddress').val('');
                $('#branchaddress1').val('');
                $('#branchaddress2').val('');
                $('#branchaddress3').val('');
                $('#branchaddress4').val('');
                $('#branchaddress5').val('');

                swal({
                    title: 'Cleared!',
                    text: 'Your form has been Cleared.',
                    type: 'success',
                    buttons: {
                        confirm: {
                            className: 'btn btn-success'
                        }
                    }
                });
            } else {
                swal.close();
            }
        });
    });
</script>
