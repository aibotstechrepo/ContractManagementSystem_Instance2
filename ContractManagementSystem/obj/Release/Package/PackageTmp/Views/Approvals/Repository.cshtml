
@model IEnumerable<ContractManagementSystem.Models.tblApprovalMaster>

@{
    ViewBag.Title = "Repository";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">Approvals</h4>
                <ul class="breadcrumbs">
                    <li class="nav-home">
                        <a href="~/Home/Dashboard">
                            <i class="flaticon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        Approver
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="">Library</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="card-title"><b>Library</b></div>
                                </div>

                                <div class="col-sm-6 text-right redirectionallink">
                                    <button type="button" class="btn btn-sm btn-primary" onclick="window.location = '/Approvals/New'"><i class="flaticon-plus" aria-hidden="true"></i>&nbsp; Create New Approvals</button>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <table id="basic-datatables" class="display table table-striped table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th><center>View</center></th>
                                                    <th><center>Department</center></th>
                                                    <th><center>Sub Department</center></th>
                                                    <th><center>Workflow Type</center></th>
                                                </tr>
                                            </thead>

                                            <tbody>

                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="redirectionallink">
                                                            <center>
                                                              
                                                                <a href="@Url.Action("Details", "Approvals", new { @Workflowtype = item.WorkflowType, @Department = item.Department, @SubDepartment = item.SubDepartment })"><i class="fa fa-eye fa-1x" aria-hidden="true"></i></a>
                                                            </center>
                                                        </td>

                                                        <td>@item.Department</td>
                                                        <td>@item.SubDepartment</td>
                                                        <td>@item.WorkflowType</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Datatables -->
</div>
<div class="modalload"><!-- Place at bottom of page --></div>


<script src="../../Content/assets/js/core/jquery.3.2.1.min.js"></script>


<script>
    $(document).ready(function () {
        $('#basic-datatables').DataTable({});
    });
</script>



