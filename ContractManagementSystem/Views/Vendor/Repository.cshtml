@model IEnumerable<ContractManagementSystem.Models.tblVendorMaster>
@{
    ViewBag.Title = "Repository";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    //Layout = "";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">Vendor Master</h4>
                <ul class="breadcrumbs">
                    <li class="nav-home">
                        <a href="~/Home/Dashboard">
                            <i class="flaticon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                       Vendor Master
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                       Repository
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="card-title"><b>Repository</b></div>
                                </div>
                                <div class="col-sm-6 text-right redirectionallink">
                                    @*<a href="~/Vendor/New"><i class="flaticon-plus" aria-hidden="true"></i></a>*@
                                    <button type="button" class="btn btn-sm btn-light btn_create" onclick="window.location = '/Vendor/New'">@*<i class="flaticon-plus" aria-hidden="true"></i>&nbsp;*@ Create New Vendor</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <table id="basic-datatables" class="display table table-striped table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th><center>View</center></th>
                                                    <th><center>Vendor Name</center></th>
                                                    <th><center>Type of Entity</center></th>
                                                    <th><center>Registered Address</center></th>
                                                    @*<th><center>Authorised Signatory</center></th>*@
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="redirectionallink">
                                                            <center>
                                                                <a href="@Url.Action("Details", "Vendor", new { id = item.VendorVendorID})">
                                                                    <i class="fa fa-eye fa-1x" aria-hidden="true"></i>
                                                                </a>
                                                            </center>
                                                        </td>
                                                        <td>@item.VendorVendorName</td>
                                                        <td>@item.VendorTypeofEntity</td>
                                                        <td>@Html.Raw(item.VendorRegisteredAddress)</td>
                                                        @*<td>@Html.Raw(item.VendorAuthorisedSignatory)</td>*@
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modalload"><!-- Place at bottom of page --></div>


<script src="../../Content/assets/js/core/jquery.3.2.1.min.js"></script>

<script>
    $(document).ready(function () {
        $('#basic-datatables').DataTable({
             "columnDefs": [
                { "width": "5%", "targets": 0 },
                { "width": "30%", "targets": 1 },
                { "width": "25%", "targets": 2 },
                { "width": "40%", "targets": 3 },
            ]
        });


    });
</script>

